@model IEnumerable<FPTLearningManagement.Models.CATEGORY>

@{
    ViewBag.Title = "Category";
}

<h2>Category</h2>

<p>
    @Html.ActionLink("Create Category", "Create")
</p>
<table class="table">
    <tr>
         
        <th>
            @Html.DisplayNameFor(model => model.CategoryName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
<tr>
     
    <td>
        @Html.DisplayFor(modelItem => item.CategoryName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Description)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.CategoryId }, new { @class = "edit" }) |
        @Html.ActionLink("Details", "Details", new { id = item.CategoryId }, new { @class = "edit" }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.CategoryId }, new { @class = "edit" })
    </td>
</tr>
}

</table>
<style>
    h2{
       text-align:center;
    }
</style>
