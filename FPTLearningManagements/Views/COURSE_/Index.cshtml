@model IEnumerable<FPTLearningManagement.Models.COURSE>

@{
    ViewBag.Title = "Course";
}

<h2>Course</h2>

<p>
    @Html.ActionLink("Create Course", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.CourseName)
        </th>



        <th>
            @Html.DisplayNameFor(model => model.CATEGORY.CategoryName)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CourseName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CATEGORY.CategoryName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CourseId }, new { @class = "edit" }) |
            @Html.ActionLink("Details", "Details", new { id=item.CourseId }, new { @class = "edit" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CourseId }, new { @class = "edit" })
        </td>
    </tr>
}

</table>
<style>
    h2 {
        text-align: center;
    }
</style>